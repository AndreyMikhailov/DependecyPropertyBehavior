<Page
    x:Class="WindowsRTExample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsRTExample"
    xmlns:i="using:Windows.UI.Interactivity"
    >
    <StackPanel>
        <PasswordBox>
            <i:Interaction.Behaviors>
                <local:DependecyPropertyBehavior 
                    UpdateEvent="PasswordChanged"
                    Property="Password"
                    Binding="{Binding Text, ElementName=TestTextBox, Mode=TwoWay}"
                    />
            </i:Interaction.Behaviors>
        </PasswordBox>
        <TextBox x:Name="TestTextBox" />
    </StackPanel>
</Page>
